<?xml version="1.0" encoding="UTF-8"?>
<project>
  <parent>
    <groupId>org.sonatype.oss</groupId>
    <artifactId>oss-parent</artifactId>
    <version>4</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId><%= ns %></groupId>
  <version><%= version %></version>
  <artifactId><%= artifactId %></artifactId>
  <name><%= pkg.name || artifactId %></name>
  <description><%= pkg.description || artifactId %></description>
 <% if (pkg.license) { %>
  <licenses>
    <license>
      <name><%= pkg.license %></name>
    </license>
  </licenses>
 <% } %>
 <% if (pkg.org) { %>
  <organization>
    <name><%= pkg.org.name %></name>
    <url><%= pkg.org.url %></url>
  </organization>
  <url><%= pkg.org.url %></url>
 <% } %>
 <% if (pkg.org) { %>
  <scm>
    <connection><%= pkg.scm.connection %></connection>
    <developerConnection><%= pkg.scm.developerConnection %></developerConnection>
    <url><%= pkg.scm.url %></url>
  </scm>
 <% } %>
  <developers>
    <developer>
      <id><%= pkg.author %></id>
      <name><%= pkg.author %></name>
    </developer>
  </developers>


  <properties>
    <maven.compiler.source>1.7</maven.compiler.source>
    <maven.compiler.target>1.7</maven.compiler.target>
    <additionalparam>-Xdoclint:none</additionalparam>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <distributionManagement>
    <snapshotRepository>
      <id>sonatype-nexus-snapshots</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
      <uniqueVersion>false</uniqueVersion>
    </snapshotRepository>
  </distributionManagement>

  <dependencies>
    <dependency>
      <groupId>com.google.gwt</groupId>
      <artifactId>gwt-user</artifactId>
      <version>2.7.0</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>src/main/java</directory>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
            <execution>
                <id>attach-sources</id>
                <goals>
                    <goal>jar-no-fork</goal>
                </goals>
            </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <executions>
            <execution>
                <id>attach-javadocs</id>
                <goals>
                    <goal>jar</goal>
                </goals>
            </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
